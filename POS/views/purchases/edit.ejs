<%- include('../layouts/header') %> 
<%- include('../layouts/nav') %>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Purchases</h1>

        <div id="purchase-section" class="card shadow mb-4">
          <div class="card-header py-3">
              <h3 id="purchase-form-title" class="m-0 font-weight-light text-grey">New Transaction</h3>
          </div>
          <div class="card-body">
              <form id="purchase-form" method="POST">
                  <div class="row pb-3">
                      <div class="col">
                        <label for="invoice" class="col-sm-auto col-form-label">Invoice</label>
                      <input form="invoice-form" name="invoice" type="text" id="invoice" class="form-control" placeholder="Invoice Number" value="<%= invoice.invoice %>" disabled>
                      </div>
                      <div class="col">
                          <label for="name" class="col-sm-auto col-form-label">Time</label>
                            <input type="" id="time" name="time" class="form-control" placeholder="DD MMMM YYYY HH:MM:SS" value="<%= setDate(invoice.time).format('DD MMM YYYY HH:mm:ss') %>" disabled>
                      </div>
                      <div class="col">
                          <label for="operator" class="col-sm-auto col-form-label">Operator</label>
                            <input type="" id="operator" name="operator" class="form-control" placeholder="Operator" value="<%= invoice.name %>" disabled>
                      </div>
                  </div>
              </form>
              <form id="invoice-form" action="/purchases/invoice/">
                  <hr>
                  <div class="row pb-3">
                      <div class="col">
                        <label for="itemcode" class="col-sm-auto col-form-label">Goods Barcode</label>
                        <select name="itemcode" id="itemcode" class="form-control">
                            <% goods.forEach((data) => { %>
                            <option value="<%= data.barcode %>"> <%= data.barcode + ` - ` + data.name %></option>
                            <% }) %>
                            </select>
                      </div>
                      <div class="col">
                          <label for="goodsname" class="col-sm-auto col-form-label">Goods Name</label>
                          <input type="text" id="goodsname" class="form-control" placeholder="Name" value="<%= goods[0].name %>" disabled>
                      </div>
                      <div class="col">
                          <label for="stock" class="col-sm-auto col-form-label">Stock</label>
                          <input type="number" id="stock" class="form-control" placeholder="0" value="<%= goods[0].stock %>" disabled>
                      </div>
                  </div>
                  <div class="row pb-3">
                      <div class="col">
                          <label for="purchaseprice" class="col-sm-auto col-form-label">Purchase Price</label>
                          <input type="number" step="1" min="'0" class="form-control" id="purchaseprice" placeholder="0.00" value="<%= goods[0].purchaseprice %>" required>
                      </div>
                      <div class="col">
                          <label for="quantity" class="col-sm-auto col-form-label">Qty</label>
                          <input name="quantity" id="quantity" type="number" min="0" class="form-control" placeholder="0" required>
                      </div>
                      <div class="col">
                          <label for="totalprice" class="col-sm-auto col-form-label">Total Price</label>
                          <input type="number" min="0" class="form-control" id="totalprice" placeholder="0" disabled>
                      </div>
                  </div>
                  <div class="pt-3">
                      <button id="invoice-add-btn" class="btn btn-primary btn-icon-split">
                          <span class="icon text-white-50">
                              <i class="fas fa-plus"></i>
                          </span>
                          <span class="text">Add</span>
                      </button>
                  </div>
              </form>
          </div>
          <hr>
          <div class="table-responsive">
              <table class="table table-bordered" id="dataInvoice" width="100%" cellspacing="0">
                  <thead>
                      <tr>
                          <th>No</th>
                          <th>Barcode</th>
                          <th>Name</th>
                          <th>Qty</th>
                          <th>Price</th>
                          <th>Total Price</th>
                          <th>Action</th>
                      </tr>
                  </thead>
                  <tfoot>
                      <tr>
                          <th>No</th>
                          <th>Barcode</th>
                          <th>Name</th>
                          <th>Qty</th>
                          <th>Price</th>
                          <th>Total Price</th>
                          <th>Action</th>
                      </tr>
                  </tfoot>
              </table>
          </div>
          <div class="card-footer">
              <div class="form-group row">
                  <label for="unit" class="col-sm-2 col-form-label">Total Summary</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="totalsum" placeholder="0,00" value="<%= invoice.totalsum %>" disabled>
                </div>
                </div>
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label pb-3">Supplier</label>
                    <div class="col-sm-10">
                        <select id="suppliers" name="suppliers" class="form-control">
                            <% supplier.forEach((data) => { %>
                            <option value="<%= data.supplierid %>"><%= data.supplierid + '. ' + data.name %></option>
                            <% }) %>
                        </select>
                    </div>
              </div>
              <button id="save-btn" form="purchase-form" type="submit" class="btn btn-success btn-icon-split">
                  <span class="icon text-white-50">
                      <i class="fas fa-plus"></i>
                  </span>
                  <span class="text">Finish</span>
              </button>
              <a href="/purchases" class="btn btn-warning btn-icon-split" id="back-btn">
                  <span class="icon text-white-50">
                      <i class="fas fa-arrow-left"></i>
                  </span>
                  <span class="text">Back</span>
              </a>
          </div>
      </div>
</div>
</div>
<!-- End of Main Content -->

