<!-- End of Delete Modal -->

  <script>
    $("document").ready(function () {
     // Read datatable Main Page
                $('#dataInvoice').DataTable({
                    "lengthChange": false,
                    "bFilter": false,
                    "paging": false,
                    "info": false,
                    "processing": true,
                    "serverSide": true,
                    "ajax": "/purchases/invoice",
                    "columns": [
                        {'data': 'id'},
                        {'data': 'itemcode'},
                        {'data': 'name'},
                        {'data': 'quantity'},
                        {
                            'data': 'purchaseprice',
                            'render': function(data) {
                                return currencyFormatter.format(data)
                            }
                        },
                        {
                            'data': 'totalprice',
                            'render': function(data) {
                                return currencyFormatter.format(data)
                            }
                        },
                        {
                            'data': 'id',
                            'orderable': false,
                            'render': function(data) {
                                return `<a data-id="${data}" data-toggle="modal" data-target="#deleteModal" class="btn btn-danger btn-circle anchor_remove"><i class="fas fa-trash"></i></a>`
                            }
                        }
                    ]
                })

     /* EVENT */
     // Add item
                $('#invoice-form').submit(function(e) {
                    e.preventDefault()
                    const invoice = $('#invoice').val()
                    const itemcode = $('#itemcode').val()
                    const qty = $('#quantity').val()
                    console.log({
                        invoice,
                        itemcode,
                        qty
                    });
                    addItem(invoice, itemcode, qty)
                })
    
     // Add quantity event
                $('#quantity').change(function() {
                    const purchasePrice = $('#purchaseprice').val()
                    const quantity = $(this).val()
                    $('#totalprice').val(quantity * purchasePrice)
                })

     // Select item event
                $('#itemcode').change(function() {
                    const itemSelected = $(this).val()
                    $('#totalprice').val(quantity * purchasePrice)
                })

    // Delete item event
                $('#dataInvoice').on('click', 'a.anchor_remove', function(e) {
                        e.preventDefault()
                        const itemId = $(this).attr('data-id')
                        $('a#delete-confirmation').attr("data-id", itemId)
                    })
                    
                $('a#delete-confirmation').click(function() {
                    const itemId = $(this).attr('data-id')
                    deleteData(itemId)
                })

    });
            
    /*############## API ##############*/

                // add item list
                const addItem = (invoice, itemcode, quantity) => {
                    $.post(`http://localhost:3023/purchases/invoice`, { invoice, itemcode, quantity })
                        .done(function (response) {
                        console.log(response);
                        // Reset form 
                        $('#invoice-form').trigger('reset')

                        // Reload table
                        $('#dataInvoice').DataTable().clear().ajax.reload();
                        updateSum()
                        })
                        .fail(function (err) {
                        console.log(err);
                        alert("gagal pake jquery");
                        });
                };

                // Delete item from invoice list
                const deleteData = (id) => {
                    $.ajax({
                        method: 'DELETE',
                        url: `http://localhost:3023/purchases/delete/${id}`,
                        dataType: 'json'
                    }).done(function(response) {
                        $('#deleteModal').modal('toggle')

                        $('#dataInvoice').DataTable().clear().ajax.reload()
                        updateSum()
                    }).fail(function(error) {
                        alert('gagal bro')
                    })
                }

                // Update totalsum
                const updateSum = () => {
                    const invoice = $('#invoice').val()
                    $.post(`http://localhost:3023/purchases/update/${invoice}`)
                    .done(function(response) {
                        $('#totalsum').val(response.totalsum)
                    })
                    .fail(function(error) {
                        alert(`update sum gagal bro`)
                    })
                }

  </script>

