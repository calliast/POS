<%- include('../layouts/modal') %> 

            <!-- End of Delete Modal -->

            <script>
         $(document).ready(function() {
            /*############## MAIN PAGE ##############*/
                // Read datatable Main Page
                    $('#purchaseList').DataTable({
                        "lengthMenu": [[3, 10, 100, -1],[3, 10, 100]],
                        "processing": true,
                        "serverSide": true,
                        "ajax": "/purchases/data",
                        "columns": [
                            {'data': 'invoice'},
                            {
                                'data': 'time',
                                'render': function(data) {
                                    return moment(data).format('DD MMM YYYY HH:mm:ss')
                                }
                            },
                            {
                                'data': 'totalsum',
                                'render': function(data) {
                                    return currencyFormatter.format(data)
                                }
                            },
                            {'data': 'supplier'},
                            {
                                'data': 'invoice',
                                'orderable': false,
                                'render': function(data) {
                                    return `<a href="/purchases/edit/${data}" class="btn btn-success btn-circle anchor_edit"><i class="fas fa-info-circle"></i></a>  <a data-id="${data}" data-toggle="modal" data-target="#deleteModal" class="btn btn-danger btn-circle anchor_remove"><i class="fas fa-trash"></i></a>`
                                }
                            },
                            
                        ]
                    })
                
                // Delete data
                    $('#purchaseList').on('click', 'a.anchor_remove', function(e) {
                        e.preventDefault()
                        const invoice = $(this).attr('data-id')
                        $('a#delete-confirmation').attr("data-id", invoice)
                    })
                    
            /*############## EVENT ##############*/
                // Delete Confirmation
                    $('a#delete-confirmation').click(function() {
                    const invoice = $(this).attr('data-id')
                    deleteData(invoice)
                })

                })

            /*############## API ##############*/
                //Delete data
                const deleteData = (invoice) => {
                    $.ajax({
                        method: 'DELETE',
                        url: `http://localhost:3023/purchases/data/${invoice}`,
                        dataType: 'json'
                    }).done(function(response) {
                        $('#deleteModal').modal('toggle')
                        $('#purchaseList').DataTable().clear().ajax.reload()
                    }).fail(function(error) {
                        alert('gagal bro')
                    })
                }

            </script>

