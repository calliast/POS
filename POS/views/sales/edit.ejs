  <script>
    

      $("document").ready(function () {
        const noInvoice = $('#invoice').val()

     // Read datatable Main Page
                $('#dataInvoice').DataTable({
                    "lengthChange": false,
                    "bFilter": false,
                    "paging": false,
                    "info": false,
                    "processing": true,
                    "serverSide": true,
                    "ajax": `/sales/new/${noInvoice}`,
                    "columns": [
                        {'data': 'id'},
                        {'data': 'itemcode'},
                        {'data': 'name'},
                        {'data': 'quantity'},
                        {
                            'data': 'sellingprice',
                            'render': function(data) {
                                return currencyFormatter.format(data)
                            }
                        },
                        {
                            'data': 'totalprice',
                            'render': function(data) {
                                return currencyFormatter.format(data)
                            }
                        },
                        {
                            'data': 'id',
                            'orderable': false,
                            'render': function(data) {
                                return `<a data-id="${data}" data-toggle="modal" data-target="#deleteModal" class="btn btn-danger btn-circle anchor_remove"><i class="fas fa-trash"></i></a>`
                            }
                        }
                    ]
                })

     /* EVENT */
     // Add item
                $('#invoice-form').submit(function(e) {
                    e.preventDefault()
                    const invoice = $('#invoice').val()
                    const itemcode = $('#itemcode').val()
                    const qty = $('#quantity').val()

                    addItem(invoice, itemcode, qty)
                })
    
     // Add quantity event
                $('#quantity').change(function() {
                    const sellingPrice = $('#sellingprice').val()
                    const quantity = $(this).val()

                    // subtract goods stock
                    updateGoods($('#itemcode').val(), true)
                    $('#totalprice').val(quantity * sellingPrice)
                })
                
    // Pay event
                $('#pay').keyup(function() {
                    const totalsum = $('#totalsum').val()
                    const pay = $(this).val()
                    $('#change').val(pay - totalsum)
                })

     // Select item event
                $('#itemcode').change(function() {
                    const itemSelected = $(this).val()
                    updateGoods(itemSelected)
                })

     // Delete item event
                $('#dataInvoice').on('click', 'a.anchor_remove', function(e) {
                        e.preventDefault()
                        const itemId = $(this).attr('data-id')
                        $('a#delete-confirmation').attr("data-id", itemId)
                    })
                    
                $('a#delete-confirmation').click(function() {
                    const itemId = $(this).attr('data-id')
                    deleteData(itemId)
                })

    });
            
    /*############## API ##############*/

                // add item list
                const addItem = (invoice, itemcode, quantity) => {
                    $.post(`http://localhost:3023/sales/invoice`, { invoice, itemcode, quantity })
                        .done(function (response) {
                        // Reload table
                        $('#quantity').val(0)
                        $('#dataInvoice').DataTable().clear().ajax.reload();

                        updateSum()
                        })
                        .fail(function (err) {
                        console.log(err);
                        alert("gagal pake jquery");
                        });
                };

                // Delete item from invoice list
                const deleteData = (id) => {
                    $.ajax({
                        method: 'DELETE',
                        url: `http://localhost:3023/sales/invoice/${id}`,
                        dataType: 'json'
                    }).done(function(response) {
                        $('#deleteModal').modal('toggle')

                        // subtract goods stock
                        updateGoods($('#itemcode').val(), true)
                        $('#dataInvoice').DataTable().clear().ajax.reload()
                        updateSum()
                    }).fail(function(error) {
                        alert('gagal bro')
                    })
                }

                // Update totalsum
                const updateSum = () => {
                    const invoice = $('#invoice').val()
                    $.post(`http://localhost:3023/sales/id/${invoice}`)
                    .done(function(response) {
                        $('#totalsum').val(response.totalsum)
                    })
                    .fail(function(error) {
                        alert(`update sum gagal bro`)
                    })
                }

                // Get Goods
                const updateGoods = (barcode, stock) => {
                    $.post(`http://localhost:3023/sales/get-goods/${barcode}`)
                    .done(function(response) {
                        if (stock) {
                            $('#stock').val(response.stock - $('#quantity').val())
                        } else {
                            $('#goodsname').val(response.name)
                            $('#stock').val(response.stock)
                            $('#sellingprice').val(response.sellingprice)
                        }
                    })
                    .fail(function(error) {
                        alert(`update goods gagal bro`)
                    })
                }

  </script>

