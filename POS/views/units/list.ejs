<!-- DataTables -->
<div id="units-section" class="card shadow mb-4" style="display:none;">
    <div class="card-header py-3">
        <h6 id="units-form-title" class="m-0 font-weight-bold text-primary">Add Data</h6>
    </div>
    <div class="card-body">
        <form id="units-form" method="POST">
            <div class="form-group row">
              <label for="unit" class="col-sm-2 col-form-label">Unit</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="unit" placeholder="Unit" required>
                <div id="unit-valid" class="valid-feedback">
                    Unit is available.
                </div>
                <div id="unit-invalid" class="invalid-feedback">
                    Unit already exist.
                </div>
            </div>
            </div>
            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                  <input type="" class="form-control" id="name" placeholder="Name" required>
                </div>
              </div>
            <div class="form-group row" id="note-form">
              <label for="note" class="col-sm-2 col-form-label">Note</label>
              <div class="col-sm-10">
                <!-- <input type="text" class="form-control" id="note" placeholder="Note" required> -->
                <textarea name="note" id="note" class="form-control" rows="3" required></textarea>
              </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <button id="save-btn" form="units-form" type="submit" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-database"></i>
            </span>
            <span class="text">Save</span>
        </button>
        <button form="units-form" class="btn btn-warning btn-icon-split" id="back-btn">
            <span class="icon text-white-50">
                <i class="fas fa-undo"></i>
            </span>
            <span class="text">Back</span>
        </button>
    </div>
</div>

<!-- DataTables -->
<div class="card shadow mb-4" id="units-table">
    <div class="card-header py-3">
        <button id="add-btn" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Add</span>
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Unit</th>
                        <th>Name</th>
                        <th>Note</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Unit</th>
                        <th>Name</th>
                        <th>Note</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>