            <script>

            $(document).ready(function() {
            
            /*############## MAIN PAGE - GOODS ##############*/

                // Table - Read data
                    $('#dataTable').DataTable({
                        "lengthMenu": [[3, 10, 100, -1],[3, 10, 100]],
                        "processing": true,
                        "serverSide": true,
                        "ajax": "/goods/data",
                        "columns": [
                            {'data': 'barcode'},
                            {'data': 'name'},
                            {'data': 'stock'},
                            {'data': 'unit'},
                            {
                                'data': 'purchaseprice',
                                'render': function(data) {
                                    return utils.currencyFormatter.format(data)
                                }
                            },
                            {
                                'data': 'sellingprice',
                                'render': function(data) {
                                    return utils.currencyFormatter.format(data)
                                }
                            },
                            {
                                'data': 'picture',
                                'orderable': false,
                                'render': function(data) {
                                    return `<img src="/images/goods/${data}" alt="Picture Preview" width="100" height="auto">`
                                }
                            },
                            {
                                'data': 'barcode',
                                'orderable': false,
                                'render': function(data) {
                                    return `<a href="/goods/edit/${data}" class="btn btn-success btn-circle anchor_edit"><i class="fas fa-info-circle"></i></a>  <a data-id="${data}" data-toggle="modal" data-target="#deleteModal" class="btn btn-danger btn-circle anchor_remove"><i class="fas fa-trash"></i></a>`
                                }
                            }
                        ]
                    })
                
                // Table - Delete data
                    $('#dataTable').on('click', 'button.anchor_remove', function(e) {
                        e.preventDefault()
                        const dataId = $(this).attr('data-id')
                        $('a#delete-confirmation').attr("data-id", dataId)
                    })
                
            /*################ MODAL - DELETE ################*/
                // Delete Confirmation
                    $('a#delete-confirmation').click(function() {
                    const barcode = $(this).attr('data-id')
                    deleteData(barcode)
                })

            })

            </script>

